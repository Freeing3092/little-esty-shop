<%= render partial: 'shared/navbar', locals: { merchant_name: @merchant.name }  %>

<%= form_with url: "/merchants/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @bulk_discount.name %>
  <%= f.label :minimum_item_quantity %>
  <%= f.number_field :minimum_item_quantity, value: @bulk_discount.minimum_item_quantity, min: 1 %>
  <%= f.label :discount_percentage %>
  <%= f.number_field :discount_percentage, value: @bulk_discount.discount_percentage, in: 0.01..1, step: 0.01 %>
  <%= f.submit "Submit" %>
<% end %>