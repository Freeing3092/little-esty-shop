<div id:="merchant-bulk_discounts">
  <h1>Bulk Discounts for <%= link_to "#{@merchant.name}", merchant_path(@merchant.id) %></h1>
</div>
<div id="holidays">
<%= render partial: "shared/discounts_index_holidays" %>
</div>
<h4> <%= link_to "Create A New Bulk Discount", new_merchant_bulk_discount_path(@merchant.id) %> </h5>


    <table class="table">
    <thead>
      <tr>
        <th>Discount ID</th>
        <th>Discount %</th>
        <th>Quantity Threshold</th>
      </tr>
    </thead>

      <tbody>
        <% @merchant.bulk_discounts.each do |discount| %>
          <tr id="discount-<%= discount.id %>">
            <td><%= link_to "#{discount.id}", bulk_discount_path(discount.id) %></td>
            <td><%= discount.discount_percent %></td>
            <td><%= discount.quantity_threshold %></td>  
            <td><%= discount.quantity_threshold %></td>
            <td><%= link_to "Delete Discount?", bulk_discount_path(discount.id), method: :delete %>  
          </tr>
        <% end %>
  </table>

