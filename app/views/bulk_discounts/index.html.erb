<%= render partial: 'shared/navbar', locals: { merchant_name: @merchant.name }  %>
<%= link_to "Create New Discount", "/merchants/#{@merchant.id}/bulk_discounts/new" %>

<div id="upcoming-holidays">
  <h3>Upcoming Holidays</h3>
  <ol>
    <% @upcoming_holidays.first(3).each do |holiday| %>
      <li> <%= "Holiday: #{holiday.name} --- Date: #{holiday.date}" %> </li>
    <% end %>
  </ol>
</div>


<div id="merchant-discounts">
  <h3>Bulk Discounts:</h3>
  <ul>
    <% @merchant.bulk_discounts.each do |bulk_discount| %>
      <li><%= "Discount: #{number_with_precision(bulk_discount.discount_percentage * 100, precision: 0)}% --- Quantity Threshold: #{bulk_discount.minimum_item_quantity}" %> 
        <%= link_to "#{bulk_discount.name}", "/merchants/#{@merchant.id}/bulk_discounts/#{bulk_discount.id}"  %>
        <%= link_to "Delete #{bulk_discount.name}", "/merchants/#{@merchant.id}/bulk_discounts/#{bulk_discount.id}", method: :delete%></li>
    <% end %>
  </ul>
</div>
  