<%= form_with model: @item, url: merchant_items_path(params[:merchant_id]), local: true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :unit_price %>
    <%= f.number_field :unit_price %>
  </div>
  <div>
    <%= f.hidden_field :status, value: 'disabled' %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>
