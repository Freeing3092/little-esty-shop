<h1>Add a New Merchant</h1>

<div class="row">
  <div class="col">
    <%= form_with(model: @merchant, url: admin_merchants_path , method: :post, local: true) do |f| %>
    <div>
      <%= f.label :name, 'Merchant Name' %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.submit 'Add Merchant' %>
    </div>
    <% end %>
  </div>
</div>